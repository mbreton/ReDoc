{
  "name": "redoc",
  "version": "0.0.1",
  "description": "This project aims to build automaticaly a showcase based component like Reactjs, Angular 2 or Polymer",
  "main": "src/index.js",
  "bin": {
    "redoc": "src/redoc.js"
  },
  "scripts": {
    "pretest": "npm run lint",
    "test": "yarn test:unit -- --coverage && yarn test:acceptance",
    "test:unit": "jest tests/unit/**/*.test.js",
    "test:acceptance": "jest tests/acceptance/*.test.js",
    "lint": "eslint ./src"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/js-republic/ReDoc.git"
  },
  "keywords": [
    "Documentation",
    "Showcase",
    "Generator",
    "React",
    "Angular 2",
    "VueJS",
    "Polymer"
  ],
  "author": "Mathieu Breton<mathieu.breton@js-republic.com>",
  "contributors": [
    "Pierrick Turelier<pierrick.turelier@js-republic.com>",
    "Vincent Cordobes<vincent.cordobes@js-republic.com>",
    "Mathieu Breton<mathieu.breton@js-republic.com>"
  ],
  "license": "GPL-3.0",
  "bugs": {
    "url": "https://github.com/js-republic/ReDoc/issues"
  },
  "homepage": "https://github.com/js-republic/ReDoc#readme",
  "dependencies": {
    "babel-eslint": "7.1.1",
    "bluebird": "3.4.7",
    "chalk": "1.1.3",
    "commander": "2.9.0",
    "fs-extra": "2.0.0",
    "glob": "7.1.1",
    "inquirer": "1.2.3",
    "react": "15.4.1",
    "react-docgen": "2.12.1",
    "winston": "2.3.0"
  },
  "devDependencies": {
    "babel-preset-es2015-node4": "2.1.0",
    "eslint": "3.10.2",
    "eslint-config-airbnb": "13.0.0",
    "eslint-plugin-import": "2.2.0",
    "eslint-plugin-jsx-a11y": "2.2.3",
    "eslint-plugin-react": "6.7.1",
    "eslint-plugin-jest": "19.0.1",
    "jest": "19.0.2",
    "react": "15.4.1",
    "rimraf": "2.5.4",
    "sinon": "1.17.7",
    "uuid": "3.0.1"
  },
  "jest": {
    "bail": true,
    "collectCoverageFrom" : [
      "src/**/*.{js,jsx}"
    ]
  },
  "babel": {
    "presets": [
      "es2015-node4"
    ]
  },
  "eslintConfig": {
    "extends": [
      "airbnb",
      "plugin:jest/recommended"
    ],
    "parser": "babel-eslint",
    "env": {
      "node": true,
      "es6": true,
      "jest/globals": true
    },
    "ecmaFeatures": {
      "ecmaVersion": 2017,
      "sourceType": "module",
      "jsx": true
    },
    "plugins": [
      "jest"
    ],
    "rules": {
      "no-plusplus": 0,
      "no-shadow": 0
    }
  }
}
